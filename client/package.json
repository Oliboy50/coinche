{
  "name": "coinche-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --verbose",
    "lint": "run-p lint:es lint:tsc",
    "lint:fix": "run-p lint:fix:es",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix:es": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint:tsc": "tsc",
    "eject": "react-scripts eject"
  },
  "engines": {
    "node": "^12.14.0"
  },
  "dependencies": {
    "boardgame.io": "0.32.1",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.0.2",
    "@types/jest": "24.0.25",
    "@types/node": "12.12.25",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "npm-run-all": "4.1.5",
    "react-scripts": "3.3.0",
    "typescript": "3.7.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "settings": {
      "react": {
        "version": "16.12.0"
      }
    },
    "rules": {
      "semi": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "warn",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "@typescript-eslint/indent": [
        "warn",
        2
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}

{
  "name": "coinche-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --verbose",
    "lint": "run-p lint:es lint:tsc",
    "lint:fix": "run-p lint:fix:es",
    "lint:es": "eslint --max-warnings 0 '**/*.{js,jsx,ts,tsx}'",
    "lint:fix:es": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint:tsc": "tsc"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "boardgame.io": "0.39.10",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "swr": "0.2.0"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/node": "12.12.37",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.7",
    "@types/react-router-dom": "5.1.5",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "npm-run-all": "4.1.5",
    "react-scripts": "3.4.1",
    "typescript": "3.9.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "semi": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "warn",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "@typescript-eslint/indent": [
        "warn",
        2
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}

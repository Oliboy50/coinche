{
  "name": "coinche-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --verbose",
    "e2e:dev": "echo '...assuming client is running on localhost:3000...' && CYPRESS_TEST_ENV=dev cypress open",
    "e2e:ci": "run-p e2e:ci:server:build e2e:ci:client:build && DEBUG=start-server-and-test start-server-and-test 'run-p e2e:ci:server:run e2e:ci:client:run' 'http://localhost:8000/healthz|http://localhost:3000' 'CYPRESS_TEST_ENV=ci cypress run'",
    "e2e:ci:server:build": "cd ../server && run-p build && cd -",
    "e2e:ci:server:run": "node ../server/build/server/src/index.js",
    "e2e:ci:client:build": "REACT_APP_API_BASE_URL=http://localhost:8000 run-p build",
    "e2e:ci:client:run": "npx serve -l 3000 -s build",
    "lint": "run-p lint:es lint:tsc",
    "lint:fix": "run-p lint:fix:es",
    "lint:es": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix:es": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:tsc": "tsc",
    "eject": "react-scripts eject"
  },
  "engines": {
    "node": "^12.7.0"
  },
  "dependencies": {
    "boardgame.io": "0.32.1",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.0.2",
    "@types/jest": "24.0.25",
    "@types/node": "^12.7.12",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "cypress": "3.8.2",
    "eslint-plugin-cypress": "2.8.1",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "npm-run-all": "4.1.5",
    "react-scripts": "3.3.0",
    "start-server-and-test": "1.10.6",
    "typescript": "3.7.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended"
    ],
    "settings": {
      "react": {
        "version": "16.12.0"
      }
    },
    "rules": {
      "semi": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "warn",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "@typescript-eslint/indent": [
        "warn",
        2
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}

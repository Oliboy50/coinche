{
  "name": "coinche-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "SERVER_ENV=dev ts-node-dev --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "run-p test:e2e",
    "test:e2e": "jest --config ./jest.e2e-config.js --verbose",
    "lint": "run-p lint:es lint:tsc",
    "lint:fix": "run-p lint:fix:es",
    "lint:es": "eslint --max-warnings 0 '**/*.{js,ts}'",
    "lint:fix:es": "eslint --fix '**/*.{js,ts}'",
    "lint:tsc": "tsc"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "boardgame.io": "0.39.15",
    "koa-route": "3.2.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.15",
    "@types/koa": "2.11.6",
    "@types/koa-route": "3.2.4",
    "@types/node": "12.19.3",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.12.1",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lint-staged": "10.5.0",
    "npm-run-all": "4.1.5",
    "supertest": "4.0.2",
    "ts-jest": "26.4.3",
    "ts-node-dev": "1.0.0",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --fix"
  }
}

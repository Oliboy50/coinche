{
  "name": "coinche-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "SERVER_ENV=dev ts-node-dev --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "prod:start": "node build/server/src/index.js",
    "test": "run-p test:e2e",
    "test:e2e": "jest --config ./jest.e2e-config.js --verbose",
    "lint": "run-p lint:es lint:tsc",
    "lint:fix": "run-p lint:fix:es",
    "lint:es": "eslint --max-warnings 0 '**/*.{js,ts}'",
    "lint:fix:es": "eslint --fix '**/*.{js,ts}'",
    "lint:tsc": "tsc",
    "prepare": "cd .. && husky install"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "boardgame.io": "0.43.3",
    "koa-route": "3.2.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/koa": "2.13.1",
    "@types/koa-route": "3.2.4",
    "@types/node": "16.18.11",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.23.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "supertest": "6.1.3",
    "ts-jest": "26.5.4",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.3"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --fix"
  }
}

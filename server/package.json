{
  "name": "coinche-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "run-p test:unit test:e2e",
    "test:unit": "jest --config ./jest.config.js --verbose",
    "test:e2e": "jest --config ./jest.e2e-config.js --verbose",
    "lint": "run-p lint:es lint:tsc",
    "lint:fix": "run-p lint:fix:es",
    "lint:es": "eslint '**/*.{js,ts}'",
    "lint:fix:es": "eslint --fix '**/*.{js,ts}'",
    "lint:tsc": "tsc"
  },
  "engines": {
    "node": "^12.7.0"
  },
  "dependencies": {
    "boardgame.io": "0.32.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.25",
    "@types/node": "^12.7.12",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.13.0",
    "@typescript-eslint/parser": "2.13.0",
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "npm-run-all": "4.1.5",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
